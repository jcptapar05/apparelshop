{% if cart.item_count > 0 %}
  <!-- Cart with items -->
  <div class="min-h-screen bg-neutral-50 dark:bg- neutral-900 font-sans">
    <!-- Hero / Cart Header -->
    <div class="relative overflow-hidden h-[300px] flex items-center justify-center mb-12">
      <!-- Background Image -->
      <img
        src="https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?q=80&w=2070&auto=format&fit=crop"
        alt="Shopping Cart"
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
        width="2070"
        height="1380"
      >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

      <div class="container mx-auto px-4 relative z-10 text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-4 drop-shadow-md font-heading">
          Your Shopping Cart
        </h1>
        <p class="text-white/90 text-lg font-medium">Review your items and proceed to checkout</p>
      </div>
    </div>

    <div class="container mx-auto px-4 pb-20">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Cart Items -->
        <div class="lg:col-span-2">
          <!-- Cart Items Header -->
          <div class="hidden md:grid grid-cols-12 gap-6 pb-4 mb-6 border-b border-gray-200">
            <div class="col-span-6">
              <span class="text-sm font-semibold text-gray-700 uppercase">Product</span>
            </div>
            <div class="col-span-2 text-center">
              <span class="text-sm font-semibold text-gray-700 uppercase">Price</span>
            </div>
            <div class="col-span-2 text-center">
              <span class="text-sm font-semibold text-gray-700 uppercase">Quantity</span>
            </div>
            <div class="col-span-2 text-center">
              <span class="text-sm font-semibold text-gray-700 uppercase">Total</span>
            </div>
          </div>

          <!-- Cart Items List -->
          <form action="/cart" method="post" id="cart-form">
            <div class="space-y-6">
              {% for item in cart.items %}
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 md:p-6 hover:shadow-md transition-shadow duration-300">
                  <div class="flex flex-col md:flex-row md:items-center gap-6">
                    <!-- Product Image & Info -->
                    <div class="flex items-center gap-4 md:gap-6 md:w-1/2">
                      <!-- Product Image -->
                      <a href="{{ item.url }}" class="flex-shrink-0">
                        <div class="w-24 h-24 md:w-28 md:h-28 rounded-xl overflow-hidden bg-gradient-to-b from-gray-50 to-gray-100">
                          {% if item.image %}
                            <img
                              src="{{ item.image | img_url: '200x200' }}"
                              alt="{{ item.image.alt | escape }}"
                              class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                              loading="lazy"
                              width="200"
                              height="200"
                            >
                          {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-400">
                              <i class="fas fa-tshirt text-3xl"></i>
                            </div>
                          {% endif %}
                        </div>
                      </a>

                      <!-- Product Details -->
                      <div class="flex-1">
                        <a href="{{ item.url }}" class="block mb-2">
                          <h3 class="font-semibold text-gray-900 hover:text-indigo-600 transition-colors duration-300 text-lg">
                            {{ item.product.title }}
                          </h3>
                        </a>

                        {% unless item.product.has_only_default_variant %}
                          <p class="text-sm text-gray-600 mb-2">
                            {{ item.variant.title }}
                          </p>
                        {% endunless %}

                        <!-- Color/Size if available -->
                        {% if item.variant.options %}
                          <div class="flex flex-wrap gap-2 mb-3">
                            {% for option in item.variant.options %}
                              {% if option != 'Default Title' %}
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                  {{ option }}
                                </span>
                              {% endif %}
                            {% endfor %}
                          </div>
                        {% endif %}

                        <!-- Remove Button -->
                        <a
                          href="/cart/change?line={{ forloop.index }}&quantity=0"
                          class="inline-flex items-center gap-1 text-sm text-red-600 hover:text-red-800 transition-colors duration-300"
                        >
                          <i class="fas fa-trash text-xs"></i>
                          Remove
                        </a>
                      </div>
                    </div>

                    <!-- Price -->
                    <div class="md:w-1/6">
                      <div class="md:text-center">
                        <div class="md:hidden text-sm text-gray-600 mb-1">Price</div>
                        <div class="text-lg font-bold text-gray-900">
                          {{ item.price | money }}
                        </div>
                        {% if item.original_price != item.price %}
                          <div class="text-sm text-gray-500 line-through">
                            {{ item.original_price | money }}
                          </div>
                          <div class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded inline-block mt-1">
                            Saved {{ item.original_price | minus: item.price | money }}
                          </div>
                        {% endif %}
                      </div>
                    </div>

                    <!-- Quantity -->
                    <div class="md:w-1/6">
                      <div class="md:text-center">
                        <div class="md:hidden text-sm text-gray-600 mb-2">Quantity</div>
                        <div class="flex items-center justify-center">
                          <div class="flex items-center border border-gray-300 rounded-lg">
                            <button
                              type="button"
                              onclick="updateQuantity({{ forloop.index }}, -1)"
                              class="quantity-btn px-3 py-2 text-gray-600 hover:text-gray-900 transition-colors duration-300"
                              {% if item.quantity <= 1 %}
                                disabled
                              {% endif %}
                            >
                              <i class="fas fa-minus text-sm"></i>
                            </button>

                            <input
                              type="number"
                              name="updates[]"
                              id="updates_{{ item.key }}"
                              value="{{ item.quantity }}"
                              min="0"
                              max="10"
                              class="w-16 text-center py-2 text-gray-900 font-medium border-x border-gray-300 focus:outline-none"
                              data-line="{{ forloop.index }}"
                              onchange="updateCartItem(this)"
                            >

                            <button
                              type="button"
                              onclick="updateQuantity({{ forloop.index }}, 1)"
                              class="quantity-btn px-3 py-2 text-gray-600 hover:text-gray-900 transition-colors duration-300"
                              {% if item.quantity >= 10 %}
                                disabled
                              {% endif %}
                            >
                              <i class="fas fa-plus text-sm"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>

                    <!-- Line Total -->
                    <div class="md:w-1/6">
                      <div class="md:text-center">
                        <div class="md:hidden text-sm text-gray-600 mb-1">Total</div>
                        <div class="text-lg font-bold text-gray-900">
                          {{ item.final_line_price | money }}
                        </div>
                        {% if item.original_line_price != item.final_line_price %}
                          <div class="text-xs text-green-600">
                            You saved {{ item.original_line_price | minus: item.final_line_price | money }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>

            <!-- Cart Actions -->
            <div class="flex flex-col sm:flex-row justify-between items-center gap-6 mt-10 pt-8 border-t border-gray-200">
              <a
                href="/collections/all"
                class="inline-flex items-center gap-2 text-indigo-600 font-medium hover:text-indigo-800 transition-colors duration-300 text-sm"
              >
                <i class="fas fa-arrow-left text-xs"></i>
                Continue Shopping
              </a>

              <div class="flex gap-4">
                <button
                  type="submit"
                  name="update"
                  class="px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded hover:bg-gray-50 transition-colors duration-300 text-sm uppercase tracking-wide"
                >
                  <i class="fas fa-sync-alt mr-2 text-xs"></i>
                  Update Cart
                </button>

                <button
                  type="button"
                  onclick="clearCart()"
                  class="px-4 py-2 border border-red-200 text-red-600 font-medium rounded hover:bg-red-50 transition-colors duration-300 text-sm uppercase tracking-wide"
                >
                  <i class="fas fa-trash mr-2 text-xs"></i>
                  Clear Cart
                </button>
              </div>
            </div>
          </form>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div class="sticky top-8 bg-white rounded-2xl shadow-lg border border-gray-100 p-6 md:p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Order Summary</h2>

            <!-- Summary Details -->
            <div class="space-y-4 mb-8">
              <div class="flex justify-between">
                <span class="text-gray-600">Subtotal</span>
                <span class="font-medium text-gray-900">{{ cart.total_price | money }}</span>
              </div>

              <div class="flex justify-between">
                <span class="text-gray-600">Shipping</span>
                <span class="font-medium text-gray-900">
                  {% if cart.total_price > 5000 %}
                    <span class="text-green-600">FREE</span>
                  {% else %}
                    Calculated at checkout
                  {% endif %}
                </span>
              </div>

              <!-- Discount Code -->
              <div class="pt-4 border-t border-gray-200">
                <div class="mb-4">
                  <label for="discount-code" class="block text-sm font-medium text-gray-700 mb-2">
                    Discount Code
                  </label>
                  <div class="flex gap-2">
                    <input
                      type="text"
                      id="discount-code"
                      placeholder="Enter code"
                      class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                    >
                    <button
                      type="button"
                      onclick="applyDiscount()"
                      class="px-4 py-2 bg-gray-900 text-white rounded font-medium hover:bg-gray-800 transition-colors duration-300 text-xs uppercase tracking-wide"
                    >
                      Apply
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Total -->
            <div class="mb-8 p-4 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-xl">
              <div class="flex justify-between items-center">
                <div>
                  <span class="text-gray-700">Estimated Total</span>
                  <p class="text-xs text-gray-600">Including shipping & taxes</p>
                </div>
                <span class="text-2xl font-bold text-gray-900">{{ cart.total_price | money }}</span>
              </div>
            </div>

            <!-- Checkout Button -->
            <button
              type="submit"
              name="checkout"
              form="cart-form"
              class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 px-6 rounded-lg font-bold text-sm hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 flex items-center justify-center gap-2 group shadow-lg hover:shadow-xl mb-6 uppercase tracking-wide"
            >
              <i class="fas fa-lock text-xs"></i>
              Proceed to Checkout
            </button>

            <!-- Trust Badges -->
            <div class="text-center">
              <div class="flex justify-center gap-6 text-2xl text-gray-400 mb-4">
                <i class="fas fa-shield-alt" title="Secure Payment"></i>
                <i class="fas fa-truck" title="Free Shipping"></i>
                <i class="fas fa-undo" title="Easy Returns"></i>
                <i class="fas fa-leaf" title="Eco-Friendly"></i>
              </div>
              <p class="text-sm text-gray-600">30-day returns â€¢ Secure payment â€¢ Free shipping over $50</p>
            </div>

            <!-- Recommended Products -->
            <div class="mt-10 pt-8 border-t border-gray-200">
              <h3 class="font-bold text-gray-900 mb-4">Frequently bought together</h3>
              <div class="space-y-4">
                {% assign recommended_collection = collections.all %}
                {% assign recommended_products = recommended_collection.products | where: 'available', true %}

                {% for recommended_product in recommended_products %}
                  <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors duration-300">
                    <div class="w-16 h-16 rounded-lg overflow-hidden bg-gradient-to-b from-gray-100 to-gray-200">
                      {% if recommended_product.featured_image %}
                        <img
                          src="{{ recommended_product.featured_image | img_url: '100x100', crop: 'center' }}"
                          alt="{{ recommended_product.featured_image.alt | escape }}"
                          class="w-full h-full object-cover"
                          loading="lazy"
                          width="100"
                          height="100"
                        >
                      {% endif %}
                    </div>
                    <div class="flex-1">
                      <a
                        href="{{ recommended_product.url }}"
                        class="font-medium text-gray-900 hover:text-indigo-600 text-sm"
                      >
                        {{ recommended_product.title | truncate: 30 }}
                      </a>
                      <div class="flex items-center justify-between mt-1">
                        <span class="font-bold text-gray-900">{{ recommended_product.price | money }}</span>
                        <button
                          type="button"
                          onclick="addToCart('{{ recommended_product.variants.first.id }}', 1)"
                          class="text-sm bg-gray-900 text-white px-3 py-1 rounded hover:bg-gray-800 transition-colors duration-300"
                        >
                          Add
                        </button>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Shipping Progress Bar -->
      <div class="mt-12 p-6 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-2xl">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
          <div>
            <h3 class="font-bold text-gray-900 mb-2">Free Shipping Goal</h3>
            <p class="text-gray-600">
              {% assign free_shipping_threshold = 5000 %}
              {% assign amount_to_free = free_shipping_threshold | minus: cart.total_price %}

              {% if amount_to_free > 0 %}
                Add <span class="font-bold text-indigo-600">{{ amount_to_free | money }}</span> more for free shipping!
              {% else %}
                ðŸŽ‰ You've unlocked free shipping!
              {% endif %}
            </p>
          </div>

          <div class="flex-1 max-w-md">
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div
                class="bg-gradient-to-r from-green-500 to-emerald-500 h-3 rounded-full transition-all duration-1000 ease-out"
                style="width: {% if cart.total_price >= free_shipping_threshold %}100{% else %}{{ cart.total_price | times: 100 | divided_by: free_shipping_threshold }}{% endif %}%"
              ></div>
            </div>
            <div class="flex justify-between text-sm text-gray-600 mt-2">
              <span>{{ cart.total_price | money }}</span>
              <span>{{ free_shipping_threshold | money }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% else %}
  <!-- Empty Cart -->
  <section class="py-24 md:py-32 px-4 md:px-8">
    <div class="container mx-auto">
      <div class="max-w-md mx-auto text-center">
        <div class="text-gray-300 text-8xl mb-8">
          <i class="fas fa-shopping-cart"></i>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Your cart is empty</h1>
        <p class="text-gray-600 text-lg mb-10">Looks like you haven't added any items to your cart yet.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/collections/all"
            class="inline-flex items-center justify-center gap-2 bg-gray-900 text-white px-5 py-2.5 rounded-full font-semibold text-sm hover:bg-gray-800 transition-all duration-300 group"
          >
            <i class="fas fa-store"></i>
            Continue Shopping
          </a>
          <a
            href="/collections/bestsellers"
            class="inline-flex items-center justify-center gap-2 border border-gray-900 text-gray-900 px-5 py-2.5 rounded-full font-semibold text-sm hover:bg-gray-50 transition-all duration-300 group"
          >
            <i class="fas fa-fire"></i>
            Shop Bestsellers
          </a>
        </div>
      </div>
    </div>
  </section>
{% endif %}

<style>
  /* Remove number input spinners */
  input[type='number']::-webkit-inner-spin-button,
  input[type='number']::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type='number'] {
    -moz-appearance: textfield;
  }

  /* Quantity button disabled state */
  .quantity-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Smooth transitions */
  .transition-all {
    transition-property: all;
  }

  /* Cart item hover effect */
  .hover\:shadow-md {
    transition: box-shadow 0.3s ease;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Quantity update functions
    window.updateQuantity = function (line, change) {
      const quantityInput = document.getElementById(`updates_{{ item.key }}`).replace('{{ item.key }}', line);
      let newQuantity = parseInt(quantityInput.value) + change;

      if (newQuantity < 1) newQuantity = 1;
      if (newQuantity > 10) newQuantity = 10;

      quantityInput.value = newQuantity;
      quantityInput.dispatchEvent(new Event('change'));
    };

    window.updateCartItem = function (input) {
      // Enable the update button or auto-update
      const updateBtn = document.querySelector('button[name="update"]');
      if (updateBtn) {
        updateBtn.classList.remove('bg-gray-300');
        updateBtn.classList.add('bg-gray-900', 'text-white');
      }
    };

    // Clear cart confirmation
    window.clearCart = function () {
      if (confirm('Are you sure you want to clear your cart?')) {
        window.location.href = '/cart/clear';
      }
    };

    // Apply discount code
    window.applyDiscount = function () {
      const codeInput = document.getElementById('discount-code');
      const code = codeInput.value.trim();

      if (!code) {
        alert('Please enter a discount code.');
        return;
      }

      // Simulate API call
      const applyBtn = codeInput.nextElementSibling;
      const originalText = applyBtn.innerHTML;
      applyBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
      applyBtn.disabled = true;

      setTimeout(() => {
        // Simulate response
        alert('Discount code applied successfully!');
        applyBtn.innerHTML = originalText;
        applyBtn.disabled = false;
        codeInput.value = '';

        // In real implementation, update cart total
      }, 1000);
    };

    // Add to cart from recommendations
    window.addToCart = function (variantId, quantity) {
      const formData = new FormData();
      formData.append('id', variantId);
      formData.append('quantity', quantity);

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => {
          // Show success message
          const alert = document.createElement('div');
          alert.className =
            'fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-slideIn';
          alert.innerHTML = `
          <div class="flex items-center gap-3">
            <i class="fas fa-check-circle"></i>
            <span>Item added to cart successfully!</span>
          </div>
        `;
          document.body.appendChild(alert);

          // Reload page to update cart
          setTimeout(() => {
            window.location.reload();
          }, 1500);
        })
        .catch((error) => {
          alert('Error adding item to cart. Please try again.');
        });
    };

    // Auto-update cart on quantity change
    const quantityInputs = document.querySelectorAll('input[name="updates[]"]');
    quantityInputs.forEach((input) => {
      let timeout;
      input.addEventListener('change', function () {
        clearTimeout(timeout);
        timeout = setTimeout(() => {
          document.getElementById('cart-form').dispatchEvent(new Event('submit'));
        }, 1000);
      });
    });

    // Add animation for new items
    const style = document.createElement('style');
    style.textContent = `
      @keyframes slideIn {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
      }
      .animate-slideIn {
        animation: slideIn 0.3s ease-out;
      }
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
      }
      .animate-pulse {
        animation: pulse 0.5s ease-in-out;
      }
    `;
    document.head.appendChild(style);
  });
</script>
