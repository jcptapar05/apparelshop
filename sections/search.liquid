<div class="min-h-screen bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 font-sans">
  {% paginate search.results by 12 %}
    <!-- Hero / Search Header -->
    <div class="relative overflow-hidden h-[300px] flex items-center justify-center mb-12">
      <!-- Background Image -->
      <img
        src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?q=80&w=2070&auto=format&fit=crop"
        alt="Search"
        class="absolute inset-0 w-full h-full object-cover opacity-80"
        loading="lazy"
        width="1920"
        height="1080"
      >
      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>

      <div class="container mx-auto px-4 relative z-10 text-center">
        <h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6 drop-shadow-md font-heading">
          {% if search.performed %}
            Results for "{{ search.terms }}"
          {% else %}
            Discover Something New
          {% endif %}
        </h1>

        <div class="max-w-2xl mx-auto">
          <form action="{{ routes.search_url }}" method="get" role="search" class="relative group">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <i class="fa-solid fa-search text-gray-400 group-focus-within:text-purple-500 transition-colors"></i>
            </div>
            <input
              type="search"
              name="q"
              value="{{ search.terms | escape }}"
              placeholder="Search products, collections, articles..."
              class="w-full pl-12 pr-4 py-3 rounded-full bg-white/95 border-0 text-gray-900 placeholder:text-gray-500 shadow-xl focus:ring-4 focus:ring-purple-500/30 focus:outline-none focus:bg-white transition-all text-base"
            >
            <input type="hidden" name="options[prefix]" value="last">
          </form>
        </div>
      </div>
    </div>

    <!-- Results Section -->
    <div class="container mx-auto px-4 py-12">
      {% if search.performed %}
        {% if search.results_count == 0 %}
          <div class="text-center py-20 animate-fade-in-up">
            <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-gray-100 dark:bg-neutral-800 mb-6">
              <i class="fa-regular fa-face-frown-open text-4xl text-gray-400"></i>
            </div>
            <h2 class="text-2xl font-bold mb-2">No results found</h2>
            <p class="text-gray-500 dark:text-gray-400 mb-8">
              We couldn't find anything matching "{{ search.terms }}". Try putting in a different keyword.
            </p>
            <a
              href="{{ routes.all_products_collection_url }}"
              class="inline-flex items-center justify-center px-6 py-2.5 border border-transparent text-sm font-medium rounded-full text-white bg-black hover:bg-gray-800 dark:bg-white dark:text-black dark:hover:bg-gray-200 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-1"
            >
              Browse All Products
            </a>
          </div>
        {% else %}
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {% for item in search.results %}
              <div class="group bg-white dark:bg-neutral-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 dark:border-neutral-700 flex flex-col h-full">
                {% if item.object_type == 'product' %}
                  <div class="relative aspect-[4/5] overflow-hidden bg-gray-100 dark:bg-neutral-700">
                    {% if item.featured_image %}
                      <img
                        src="{{ item.featured_image | image_url: width: 600 }}"
                        alt="{{ item.featured_image.alt | default: item.title }}"
                        width="600"
                        height="750"
                        class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-500 ease-out"
                        loading="lazy"
                      >
                    {% else %}
                      <div class="w-full h-full flex items-center justify-center text-gray-300">
                        <i class="fa-solid fa-image text-3xl"></i>
                      </div>
                    {% endif %}

                    {%- unless item.available -%}
                      <div class="absolute top-2 right-2 px-3 py-1 bg-black/70 backdrop-blur-sm text-white text-xs font-bold uppercase rounded-full">
                        Sold Out
                      </div>
                    {%- endunless -%}

                    {%- if item.compare_at_price > item.price -%}
                      <div class="absolute top-2 left-2 px-3 py-1 bg-red-500 text-white text-xs font-bold uppercase rounded-full shadow-lg">
                        Sale
                      </div>
                    {%- endif -%}
                  </div>

                  <div class="p-5 flex-1 flex flex-col">
                    <div class="text-xs font-medium text-purple-600 dark:text-purple-400 mb-1 uppercase tracking-wider">
                      Product
                    </div>
                    <h3 class="text-lg font-bold mb-2 group-hover:text-purple-600 transition-colors line-clamp-2">
                      <a href="{{ item.url }}" class="before:absolute before:inset-0">
                        {{ item.title }}
                      </a>
                    </h3>
                    <div class="mt-auto pt-2 flex items-center justify-between">
                      <span class="text-lg font-semibold text-gray-900 dark:text-white">
                        {{ item.price | money }}
                      </span>
                      {% if item.compare_at_price > item.price %}
                        <span class="text-sm text-gray-400 line-through">
                          {{ item.compare_at_price | money }}
                        </span>
                      {% endif %}
                    </div>
                  </div>

                {% elsif item.object_type == 'article' %}
                  <div class="relative aspect-video overflow-hidden bg-gray-100">
                    {% if item.image %}
                      <img
                        src="{{ item.image | image_url: width: 600 }}"
                        width="600"
                        height="338"
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        alt="{{ item.title }}"
                      >
                    {% else %}
                      <div class="w-full h-full flex items-center justify-center bg-indigo-50 text-indigo-200">
                        <i class="fa-solid fa-newspaper text-5xl"></i>
                      </div>
                    {% endif %}
                  </div>
                  <div class="p-6 flex-1 flex flex-col">
                    <div class="text-xs font-medium text-pink-600 dark:text-pink-400 mb-1 uppercase tracking-wider">
                      Blog Post
                    </div>
                    <h3 class="text-xl font-bold mb-3 group-hover:text-pink-600 transition-colors">
                      <a href="{{ item.url }}" class="before:absolute before:inset-0">{{ item.title }}</a>
                    </h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-3 mb-4 flex-1">
                      {{ item.content | strip_html | truncatewords: 20 }}
                    </p>
                    <div class="text-xs text-gray-400 mt-auto">
                      {{ item.published_at | date: '%B %d, %Y' }}
                    </div>
                  </div>

                {% else %}
                  <div class="p-6 flex-1 flex flex-col justify-center">
                    <div class="text-xs font-medium text-blue-600 dark:text-blue-400 mb-1 uppercase tracking-wider">
                      Page
                    </div>
                    <h3 class="text-lg font-bold group-hover:text-blue-600 transition-colors">
                      <a href="{{ item.url }}" class="before:absolute before:inset-0">{{ item.title }}</a>
                    </h3>
                    <p class="text-sm text-gray-500 mt-2 line-clamp-3">
                      {{ item.content | strip_html | truncatewords: 20 }}
                    </p>
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>

          {% if paginate.pages > 1 %}
            <div class="mt-16 flex justify-center">
              <nav class="flex items-center gap-2" role="navigation">
                {% if paginate.previous %}
                  <a
                    href="{{ paginate.previous.url }}"
                    class="px-4 py-2 border border-gray-300 dark:border-neutral-600 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-700 transition-colors text-sm"
                  >
                    <i class="fa-solid fa-chevron-left mr-2"></i> Previous
                  </a>
                {% endif %}

                <span class="px-4 py-2 text-gray-500 dark:text-gray-400">
                  Page {{ paginate.current_page }} of {{ paginate.pages }}
                </span>

                {% if paginate.next %}
                  <a
                    href="{{ paginate.next.url }}"
                    class="px-4 py-2 border border-gray-300 dark:border-neutral-600 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-700 transition-colors text-sm"
                  >
                    Next <i class="fa-solid fa-chevron-right ml-2"></i>
                  </a>
                {% endif %}
              </nav>
            </div>
          {% endif %}
        {% endif %}
      {% else %}
        <!-- Initial State (No Search Performed) -->
        <div class="text-center py-12">
          <h3 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Start typing to see products...</h3>
          <p class="text-gray-500 max-w-lg mx-auto">
            Explore our latest collection, search for your favorite styles, or find helpful articles.
          </p>
        </div>
      {% endif %}
    </div>
  {% endpaginate %}
</div>
