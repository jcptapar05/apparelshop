{% paginate collection.products by 12 %}
  <div class="min-h-screen bg-neutral-50 dark:bg-neutral-900 font-sans">
    <!-- Hero / Collection Header -->
    <div class="relative overflow-hidden h-[400px] flex items-center justify-center mb-12">
      <!-- Background Image -->
      {% if collection.image %}
        <img
          src="{{ collection.image | image_url: width: 2000 }}"
          alt="{{ collection.title | escape }}"
          class="absolute inset-0 w-full h-full object-cover"
          width="2000"
          height="1000"
        >
      {% elsif collection.products.first.featured_image %}
        <img
          src="{{ collection.products.first.featured_image | image_url: width: 2000 }}"
          alt="{{ collection.title | escape }}"
          class="absolute inset-0 w-full h-full object-cover"
          width="2000"
          height="1000"
        >
      {% else %}
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 to-gray-800"></div>
      {% endif %}

      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/40 backdrop-blur-sm"></div>

      <!-- Content -->
      <div class="container mx-auto px-4 relative z-10 text-center">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white tracking-tight mb-6 drop-shadow-xl font-heading">
          {{ collection.title }}
        </h1>
        {% if collection.description %}
          <div class="max-w-2xl mx-auto text-white/95 text-lg font-medium leading-relaxed drop-shadow-md">
            {{ collection.description }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="container mx-auto px-4 pb-20">
      <!-- Filters Form -->
      <form method="get" action="{{ collection.url }}" class="mb-8">
        <div class="flex flex-col md:flex-row md:items-center gap-4 p-4 bg-gray-50 rounded-lg">
          <!-- Sort By -->
          <div>
            <label for="sort_by" class="block text-sm font-medium text-gray-700 mb-1">Sort by</label>
            <select
              name="sort_by"
              id="sort_by"
              onchange="this.form.submit()"
              class="w-full md:w-auto bg-white border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
            >
              <option
                value="manual"
                {% if collection.sort_by == 'manual' %}
                  selected
                {% endif %}
              >
                Featured
              </option>
              <option
                value="best-selling"
                {% if collection.sort_by == 'best-selling' %}
                  selected
                {% endif %}
              >
                Best Selling
              </option>
              <option
                value="title-ascending"
                {% if collection.sort_by == 'title-ascending' %}
                  selected
                {% endif %}
              >
                Alphabetically, A-Z
              </option>
              <option
                value="title-descending"
                {% if collection.sort_by == 'title-descending' %}
                  selected
                {% endif %}
              >
                Alphabetically, Z-A
              </option>
              <option
                value="price-ascending"
                {% if collection.sort_by == 'price-ascending' %}
                  selected
                {% endif %}
              >
                Price, low to high
              </option>
              <option
                value="price-descending"
                {% if collection.sort_by == 'price-descending' %}
                  selected
                {% endif %}
              >
                Price, high to low
              </option>
              <option
                value="created-descending"
                {% if collection.sort_by == 'created-descending' %}
                  selected
                {% endif %}
              >
                Date, new to old
              </option>
              <option
                value="created-ascending"
                {% if collection.sort_by == 'created-ascending' %}
                  selected
                {% endif %}
              >
                Date, old to new
              </option>
            </select>
          </div>

          <!-- Availability Filter -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Availability</label>
            <div class="flex items-center space-x-4">
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="availability"
                  value="in_stock"
                  onchange="this.form.submit()"
                  {% if current_tags contains 'in_stock' or request.query contains 'availability=in_stock' %}
                    checked
                  {% endif %}
                  class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
                >
                <span class="ml-2 text-gray-700">In Stock</span>
              </label>
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="availability"
                  value="out_of_stock"
                  onchange="this.form.submit()"
                  {% if current_tags contains 'out_of_stock' or request.query contains 'availability=out_of_stock' %}
                    checked
                  {% endif %}
                  class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
                >
                <span class="ml-2 text-gray-700">Out of Stock</span>
              </label>
              <label class="inline-flex items-center">
                <input
                  type="radio"
                  name="availability"
                  value=""
                  onchange="this.form.submit()"
                  {% unless current_tags contains 'in_stock'
                    or current_tags contains 'out_of_stock'
                    or request.query contains 'availability='
                  %}
                    checked
                  {% endunless %}
                  class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
                >
                <span class="ml-2 text-gray-700">All</span>
              </label>
            </div>
          </div>

          <!-- Price Filter -->
          <div>
            <label for="price_filter" class="block text-sm font-medium text-gray-700 mb-1">Price Range</label>
            <select
              name="price_filter"
              id="price_filter"
              onchange="this.form.submit()"
              class="w-full md:w-auto bg-white border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
            >
              <option value="">All Prices</option>
              <option
                value="under_50"
                {% if request.query contains 'price_filter=under_50' %}
                  selected
                {% endif %}
              >
                Under $50
              </option>
              <option
                value="50_100"
                {% if request.query contains 'price_filter=50_100' %}
                  selected
                {% endif %}
              >
                $50 - $100
              </option>
              <option
                value="100_200"
                {% if request.query contains 'price_filter=100_200' %}
                  selected
                {% endif %}
              >
                $100 - $200
              </option>
              <option
                value="over_200"
                {% if request.query contains 'price_filter=over_200' %}
                  selected
                {% endif %}
              >
                Over $200
              </option>
            </select>
          </div>

          <!-- Reset Filters Button -->
          <div class="md:ml-auto">
            <a
              href="{{ collection.url }}"
              class="inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition-colors duration-300"
            >
              Reset Filters
            </a>
          </div>

          <!-- Keep pagination parameter -->
          {% if paginate.current_page > 1 %}
            <input type="hidden" name="page" value="{{ paginate.current_page }}">
          {% endif %}
        </div>
      </form>

      <!-- Active Filters Display -->
      {% assign has_filters = false %}
      {% if collection.sort_by != 'manual'
        or request.query contains 'availability='
        or request.query contains 'price_filter='
      %}
        {% assign has_filters = true %}
      {% endif %}

      {% if has_filters %}
        <div class="mb-6 flex flex-wrap gap-2 items-center">
          <span class="text-sm font-medium text-gray-700">Active filters:</span>

          {% if collection.sort_by != 'manual' %}
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-indigo-100 text-indigo-800">
              Sorted: {{ collection.sort_by | replace: '-', ' ' | capitalize }}
              <a
                href="{{ collection.url }}?sort_by=manual{% if request.query contains 'availability=' %}&availability={{ request.query.availability }}{% endif %}{% if request.query contains 'price_filter=' %}&price_filter={{ request.query.price_filter }}{% endif %}"
                class="ml-2 text-indigo-600 hover:text-indigo-800"
              >
                ×
              </a>
            </span>
          {% endif %}

          {% if request.query contains 'availability=' and request.query.availability != '' %}
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">
              Availability: {{ request.query.availability | replace: '_', ' ' | capitalize }}
              <a
                href="{{ collection.url }}?sort_by={{ collection.sort_by }}{% if request.query contains 'price_filter=' %}&price_filter={{ request.query.price_filter }}{% endif %}"
                class="ml-2 text-green-600 hover:text-green-800"
              >
                ×
              </a>
            </span>
          {% endif %}

          {% if request.query contains 'price_filter=' and request.query.price_filter != '' %}
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800">
              Price: {{ request.query.price_filter | replace: '_', ' ' | capitalize }}
              <a
                href="{{ collection.url }}?sort_by={{ collection.sort_by }}{% if request.query contains 'availability=' %}&availability={{ request.query.availability }}{% endif %}"
                class="ml-2 text-purple-600 hover:text-purple-800"
              >
                ×
              </a>
            </span>
          {% endif %}
        </div>
      {% endif %}

      <!-- Products Grid -->
      {% if collection.products.size > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
          {% for product in collection.products %}
            <div class="group relative bg-white dark:bg-neutral-800 rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100 dark:border-neutral-700">
              <!-- Product Image -->
              <a href="{{ product.url }}" class="block overflow-hidden">
                <div class="aspect-square bg-gray-100">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | img_url: '600x600' }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="w-full h-full flex items-center justify-center bg-gray-200">
                      <span class="text-gray-400">No image</span>
                    </div>
                  {% endif %}
                </div>
              </a>

              <!-- Product Info -->
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                  <a href="{{ product.url }}" class="hover:text-indigo-600 transition-colors duration-300">
                    {{ product.title }}
                  </a>
                </h3>

                <!-- Price -->
                <div class="flex items-center gap-2 mb-3">
                  <span class="text-xl font-bold text-gray-900">{{ product.price | money }}</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="text-sm text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
                    <span class="text-sm font-medium text-red-600 bg-red-50 px-2 py-1 rounded">
                      Save {{ product.compare_at_price | minus: product.price | money }}
                    </span>
                  {% endif %}
                </div>

                <!-- Availability Badge -->
                <div class="mb-3">
                  {% if product.available %}
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1"></span>
                      In Stock
                    </span>
                  {% else %}
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <span class="w-1.5 h-1.5 bg-gray-500 rounded-full mr-1"></span>
                      Out of Stock
                    </span>
                  {% endif %}
                </div>

                <!-- Quick Add to Cart -->
                <form action="/cart/add" method="post" class="mt-auto">
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  <button
                    type="submit"
                    name="add"
                    class="w-full bg-neutral-900 text-white py-2 px-4 rounded font-medium hover:bg-black transition-colors duration-300 flex items-center justify-center gap-2 text-xs uppercase tracking-wide"
                    {% unless product.available %}
                      disabled
                    {% endunless %}
                  >
                    <i class="fas fa-shopping-cart"></i>
                    {% if product.available %}
                      Add to Cart
                    {% else %}
                      Sold Out
                    {% endif %}
                  </button>
                </form>
              </div>

              <!-- Sale Badge -->
              {% if product.compare_at_price > product.price %}
                <div class="absolute top-3 left-3 bg-red-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                  SALE
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% else %}
        <!-- No Products Message -->
        <div class="text-center py-16">
          <div class="text-gray-400 text-6xl mb-4">
            <i class="fas fa-tshirt"></i>
          </div>
          <h3 class="text-2xl font-bold text-gray-700 mb-4">No products found</h3>
          <p class="text-gray-500 mb-8 max-w-md mx-auto">Try adjusting your filters or browse our full collection.</p>
          <a
            href="{{ collection.url }}"
            class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-md font-medium hover:bg-indigo-700 transition-colors duration-300"
          >
            Clear All Filters
          </a>
        </div>
      {% endif %}

      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="mt-16 flex justify-center">
          <nav class="flex items-center gap-2">
            {% if paginate.previous %}
              <a
                href="{{ paginate.previous.url }}{% if request.query %}&{{ request.query | remove: 'page=' | remove: 'page%5B%5D=' }}{% endif %}"
                class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:bg-black hover:text-white hover:border-black transition-all duration-300"
              >
                <i class="fa-solid fa-chevron-left"></i>
              </a>
            {% endif %}

            <div class="flex items-center gap-1">
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a
                    href="{{ part.url }}{% if request.query %}&{{ request.query | remove: 'page=' | remove: 'page%5B%5D=' }}{% endif %}"
                    class="w-10 h-10 flex items-center justify-center rounded-full text-gray-600 hover:bg-gray-100 transition-all duration-300 font-medium"
                  >
                    {{ part.title }}
                  </a>
                {% else %}
                  {% if part.title == paginate.current_page %}
                    <span class="w-10 h-10 flex items-center justify-center rounded-full bg-black text-white font-bold shadow-md">
                      {{ part.title }}
                    </span>
                  {% else %}
                    <span class="w-10 h-10 flex items-center justify-center text-gray-400">
                      {{ part.title }}
                    </span>
                  {% endif %}
                {% endif %}
              {% endfor %}
            </div>

            {% if paginate.next %}
              <a
                href="{{ paginate.next.url }}{% if request.query %}&{{ request.query | remove: 'page=' | remove: 'page%5B%5D=' }}{% endif %}"
                class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-200 text-gray-600 hover:bg-black hover:text-white hover:border-black transition-all duration-300"
              >
                <i class="fa-solid fa-chevron-right"></i>
              </a>
            {% endif %}
          </nav>
        </div>
      {% endif %}
    </div>
  </div>
{% endpaginate %}

{% schema %}
{
  "name": "Main Product Collection",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Products per page"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Hello World"
        }
      ]
    }
  ]
}
{% endschema %}
