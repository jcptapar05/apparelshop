    scroll-snap-type: x mandatory;
  }
  .snap-start {
    scroll-snap-align: start;
  }
  .snap-mandatory {
    scroll-snap-stop: always;
  }

  /* Carousel animation */
  #products-carousel {
    scroll-behavior: smooth;
    transition: scroll-left 0.3s ease;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carousel = document.getElementById('products-carousel');
    const prevBtn = document.getElementById('carousel-prev');
    const nextBtn = document.getElementById('carousel-next');
    const dots = document.querySelectorAll('.carousel-dot');

    const cardWidth = 280 + 24; // card width + gap
    const mobileCardWidth = window.innerWidth <= 768 ? 280 + 24 : cardWidth;

    let currentSlide = 0;
    const totalSlides = 5; // Update this based on actual number of products

    // Desktop Navigation
    if (prevBtn && nextBtn) {
      prevBtn.addEventListener('click', () => {
        if (currentSlide > 0) {
          currentSlide--;
          updateCarousel();
        }
      });

      nextBtn.addEventListener('click', () => {
        if (currentSlide < totalSlides - 1) {
          currentSlide++;
          updateCarousel();
        }
      });
    }

    // Mobile touch/swipe support
    let startX = 0;
    let scrollLeft = 0;

    carousel.addEventListener('touchstart', (e) => {
      startX = e.touches[0].pageX - carousel.offsetLeft;
      scrollLeft = carousel.scrollLeft;
    });

    carousel.addEventListener('touchmove', (e) => {
      if (!e.touches || e.touches.length === 0) return;
      const x = e.touches[0].pageX - carousel.offsetLeft;
      const walk = (x - startX) * 2;
      carousel.scrollLeft = scrollLeft - walk;
    });

    // Update dots based on scroll
    carousel.addEventListener('scroll', () => {
      if (window.innerWidth <= 768) {
        const scrollPos = carousel.scrollLeft;
        const activeDot = Math.round(scrollPos / mobileCardWidth);
        updateDots(activeDot);
      }
    });

    // Dot navigation for mobile
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        updateCarousel();
      });
    });

    function updateCarousel() {
      if (window.innerWidth <= 768) {
        // Mobile: scroll to position
        carousel.scrollTo({
          left: currentSlide * mobileCardWidth,
          behavior: 'smooth',
        });
      } else {
        // Desktop: scroll to position
        carousel.scrollTo({
          left: currentSlide * cardWidth,
          behavior: 'smooth',
        });
      }
      updateDots(currentSlide);
    }

    function updateDots(index) {
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
        dot.classList.toggle('bg-gray-300', i !== index);
        dot.classList.toggle('bg-indigo-600', i === index);
        dot.classList.toggle('w-2', i !== index);
        dot.classList.toggle('w-4', i === index);
      });
    }

    // Initialize
    updateDots(0);

    // Auto-advance carousel (optional)
    let autoSlideInterval = setInterval(() => {
      if (currentSlide < totalSlides - 1) {
        currentSlide++;
      } else {
        currentSlide = 0;
      }
      updateCarousel();
    }, 5000);

    // Pause auto-slide on hover
    carousel.addEventListener('mouseenter', () => {
      clearInterval(autoSlideInterval);
    });

    carousel.addEventListener('mouseleave', () => {
      autoSlideInterval = setInterval(() => {
        if (currentSlide < totalSlides - 1) {
          currentSlide++;
        } else {
          currentSlide = 0;
        }
        updateCarousel();
      }, 5000);
    });
  });
</script>
