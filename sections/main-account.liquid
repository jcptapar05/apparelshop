<div class="min-h-screen bg-neutral-50 dark:bg-neutral-900 py-16 px-4 sm:px-6 lg:px-8 font-sans text-neutral-900 dark:text-neutral-100">
  <div class="max-w-6xl mx-auto">
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-12 gap-4 animate-fade-in-up">
      <div>
        <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-white tracking-tight">My Account</h1>
        <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
          Welcome back, {{ customer.first_name | default: 'Customer' }}!
        </p>
      </div>
      <a
        href="{{ routes.account_logout_url }}"
        class="group inline-flex items-center px-6 py-2 border border-gray-300 dark:border-neutral-600 text-sm font-medium rounded-full text-gray-700 dark:text-gray-200 bg-white dark:bg-neutral-800 hover:bg-gray-50 dark:hover:bg-neutral-700 transition-all shadow-sm hover:shadow-md"
      >
        <i class="fa-solid fa-sign-out-alt mr-2 group-hover:text-red-500 transition-colors"></i> Log out
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Order History Section (Takes up 2/3 on large screens) -->
      <div class="lg:col-span-2 space-y-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
          <i class="fa-solid fa-box-open mr-3 text-indigo-500"></i> Order History
        </h2>

        {% paginate customer.orders by 10 %}
          {% if customer.orders.size > 0 %}
            <div class="bg-white dark:bg-neutral-800 rounded-2xl shadow-sm border border-gray-100 dark:border-neutral-700 overflow-hidden">
              <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-neutral-700 text-left">
                  <thead class="bg-gray-50 dark:bg-neutral-900/50">
                    <tr>
                      <th
                        scope="col"
                        class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                      >
                        Order
                      </th>
                      <th
                        scope="col"
                        class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                      >
                        Date
                      </th>
                      <th
                        scope="col"
                        class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                      >
                        Payment
                      </th>
                      <th
                        scope="col"
                        class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider"
                      >
                        Fulfillment
                      </th>
                      <th
                        scope="col"
                        class="px-6 py-4 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider text-right"
                      >
                        Total
                      </th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200 dark:divide-neutral-700 bg-white dark:bg-neutral-800">
                    {% for order in customer.orders %}
                      <tr class="hover:bg-gray-50 dark:hover:bg-neutral-700/50 transition-colors group">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                          <a
                            href="{{ order.customer_url }}"
                            class="text-indigo-600 dark:text-indigo-400 hover:underline"
                          >
                            {{ order.name }}
                          </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                          {{ order.created_at | time_tag: format: 'date' }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                          <span
                            class="
                              inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                              {% if order.financial_status == 'paid' %} bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400
                              {% elsif order.financial_status == 'pending' %} bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400
                              {% else %} bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 {% endif %}
                            "
                          >
                            {{ order.financial_status_label }}
                          </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                          <span
                            class="
                              inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                              {% if order.fulfillment_status == 'fulfilled' %} bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400
                              {% else %} bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 {% endif %}
                            "
                          >
                            {{ order.fulfillment_status_label }}
                          </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900 dark:text-white">
                          {{ order.total_price | money }}
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>

              {% if paginate.pages > 1 %}
                <div class="px-6 py-4 border-t border-gray-200 dark:border-neutral-700 flex items-center justify-between">
                  {{ paginate | default_pagination }}
                </div>
              {% endif %}
            </div>
          {% else %}
            <div class="bg-white dark:bg-neutral-800 rounded-2xl shadow-sm border border-gray-100 dark:border-neutral-700 p-8 text-center">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-indigo-50 dark:bg-indigo-900/30 mb-4">
                <i class="fa-solid fa-shopping-bag text-2xl text-indigo-500"></i>
              </div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No orders yet</h3>
              <p class="text-gray-500 dark:text-gray-400 mb-6">When you place an order, it will appear here.</p>
              <a
                href="{{ routes.all_products_collection_url }}"
                class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-sm font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-500/30"
              >
                Start Shopping
              </a>
            </div>
          {% endif %}
        {% endpaginate %}
      </div>

      <!-- Account Details Section -->
      <div class="space-y-6">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
          <i class="fa-solid fa-user-circle mr-3 text-purple-500"></i> Account Details
        </h2>

        <div class="bg-white dark:bg-neutral-800 rounded-2xl shadow-sm border border-gray-100 dark:border-neutral-700 p-6 relative overflow-hidden group">
          <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
            <i class="fa-solid fa-map-marked-alt text-6xl text-purple-500"></i>
          </div>

          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 z-10 relative">Default Address</h3>

          <div class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-6 z-10 relative">
            {% if customer.default_address %}
              <p class="font-medium text-gray-900 dark:text-white">{{ customer.default_address.name }}</p>
              {% if customer.default_address.company != blank %}
                <p>{{ customer.default_address.company }}</p>
              {% endif %}
              <p>{{ customer.default_address.street }}</p>
              <p>
                {{ customer.default_address.city }}, {{ customer.default_address.province_code }}
                {{ customer.default_address.zip }}
              </p>
              <p>{{ customer.default_address.country }}</p>
              {% if customer.default_address.phone != blank %}
                <p class="mt-2 text-gray-500">
                  <i class="fa-solid fa-phone mr-1"></i> {{ customer.default_address.phone }}
                </p>
              {% endif %}
            {% else %}
              <p class="italic text-gray-400">No default address set.</p>
            {% endif %}
          </div>

          <a
            href="{{ routes.account_addresses_url }}"
            class="inline-flex items-center text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 relative z-10"
          >
            View all addresses <i class="fa-solid fa-arrow-right ml-2 text-xs"></i>
          </a>
        </div>

        <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-lg p-6 text-white relative overflow-hidden">
          <div class="relative z-10">
            <h3 class="text-lg font-bold mb-2">Need Help?</h3>
            <p class="text-indigo-100 text-sm mb-4">Have questions about your order or account?</p>
            <a
              href="/pages/contact"
              class="inline-block bg-white text-indigo-600 text-sm font-bold px-4 py-2 rounded-lg hover:bg-indigo-50 transition-colors"
              >Contact Support</a
            >
          </div>
          <div class="absolute -bottom-6 -right-6 text-white opacity-20">
            <i class="fa-solid fa-headset text-8xl"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
