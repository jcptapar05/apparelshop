<!-- Top Announcement Bar -->
<div class="bg-black text-white text-xs py-2 text-center uppercase tracking-widest font-semibold z-50 relative">
  Free Shipping on Orders Over $100
</div>

<header
  class="sticky top-0 z-40 bg-white/80 backdrop-blur-md border-b border-gray-100 transition-all duration-300 transform"
  id="site-header"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo (Left) -->
      <div class="flex-shrink-0 flex items-center">
        <a href="{{ routes.root_url }}" class="flex items-center gap-2 group">
          {% if settings.logo %}
            <img
              src="{{ settings.logo | image_url: width: 600 }}"
              alt="{{ shop.name }}"
              class="h-10 w-auto object-contain transition-transform duration-300 group-hover:scale-105"
              width="{{ settings.logo.width }}"
              height="{{ settings.logo.height }}"
            >
          {% else %}
            <div class="flex items-center gap-2">
              <div class="bg-gray-900 text-white p-1 rounded-md">
                <i class="fas fa-layer-group text-xl"></i>
              </div>
              <span class="text-2xl font-bold text-gray-900 tracking-tight group-hover:text-gray-600 transition-colors font-heading uppercase">
                {{- shop.name -}}
              </span>
            </div>
          {% endif %}
        </a>
      </div>

      <!-- Desktop Navigation (Center) -->
      <nav class="hidden lg:flex space-x-1">
        {% for link in linklists['main-menu'].links %}
          <div class="relative group">
            <a
              href="{{ link.url }}"
              class="px-4 py-2 text-sm font-semibold text-gray-700 hover:text-gray-900 hover:bg-gray-100/50 rounded-full transition-all duration-200 uppercase tracking-wide flex items-center gap-1 {% if link.active %}bg-gray-100 text-gray-900{% endif %}"
            >
              {{ link.title }}
              {% if link.links != blank %}
                <i
                  class="fas fa-chevron-down text-[10px] ml-0.5 opacity-50 group-hover:opacity-100 transition-opacity"
                ></i>
              {% endif %}
            </a>

            {% if link.links != blank %}
              <div class="absolute lg:top-full left-0 mt-2 w-56 bg-white shadow-xl rounded-xl p-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-2 border border-gray-100 z-50">
                <div class="flex flex-col gap-1">
                  {% for childlink in link.links %}
                    <a
                      href="{{ childlink.url }}"
                      class="text-gray-600 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2.5 rounded-lg transition-colors text-sm font-medium"
                    >
                      {{ childlink.title }}
                    </a>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </nav>

      <!-- Icons (Right) -->
      <div class="flex items-center gap-6">
        <a href="{{ routes.search_url }}" class="text-gray-500 hover:text-indigo-600 transition-colors duration-200">
          <i class="fa-solid fa-magnifying-glass text-lg"></i>
        </a>

        {% if shop.customer_accounts_enabled %}
          <a
            href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
            class="hidden md:block text-gray-500 hover:text-indigo-600 transition-colors duration-200"
          >
            <i class="fa-regular fa-user text-lg"></i>
          </a>
        {% endif %}

        <a
          href="{{ routes.cart_url }}"
          class="group flex items-center gap-2 text-gray-900 font-medium hover:text-indigo-600 transition-colors pointer-events-auto"
        >
          <div class="relative">
            <i class="fa-solid fa-bag-shopping text-xl text-gray-500 group-hover:text-indigo-600 transition-colors"></i>
            {% if cart.item_count > 0 %}
              <span class="absolute -top-1.5 -right-1.5 bg-indigo-600 text-white text-[10px] font-bold h-4 w-4 flex items-center justify-center rounded-full ring-2 ring-white">
                {{ cart.item_count }}
              </span>
            {% endif %}
          </div>
        </a>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="lg:hidden text-gray-500 hover:text-gray-900 focus:outline-none"
          onclick="toggleMobileMenu()"
        >
          <i class="fa-solid fa-bars text-xl"></i>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 ease-in-out lg:hidden"
  >
    <div class="flex flex-col h-full">
      <div class="flex items-center justify-between p-6 border-b border-gray-100">
        <span class="text-xl font-bold">{{ shop.name }}</span>
        <button onclick="toggleMobileMenu()" class="text-gray-500 hover:text-gray-900">
          <i class="fa-solid fa-xmark text-2xl"></i>
        </button>
      </div>

      <div class="flex-1 overflow-y-auto p-6">
        <nav class="flex flex-col gap-6">
          {% for link in linklists['main-menu'].links %}
            <div class="space-y-3">
              <a href="{{ link.url }}" class="text-xl font-bold text-gray-900 block">
                {{ link.title }}
              </a>
              {% if link.links != blank %}
                <div class="pl-4 space-y-3 border-l-2 border-gray-100">
                  {% for childlink in link.links %}
                    <a href="{{ childlink.url }}" class="block text-gray-600 font-medium">
                      {{ childlink.title }}
                    </a>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </nav>
      </div>

      <div class="p-6 border-t border-gray-100 bg-gray-50">
        <div class="flex flex-col gap-4">
          {% if shop.customer_accounts_enabled %}
            <a
              href="{% if customer %}{{ routes.account_url }}{% else %}{{ routes.account_login_url }}{% endif %}"
              class="flex items-center gap-3 text-gray-700 font-medium p-3 bg-white rounded-lg border border-gray-200"
            >
              <i class="fa-regular fa-user"></i>
              {% if customer %}My Account{% else %}Log In / Sign Up{% endif %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    const body = document.body;

    if (menu.classList.contains('translate-x-full')) {
      menu.classList.remove('translate-x-full');
      body.style.overflow = 'hidden';
    } else {
      menu.classList.add('translate-x-full');
      body.style.overflow = '';
    }
  }

  // Header scroll effect
  let lastScroll = 0;
  const header = document.getElementById('site-header');

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 0) {
      header.classList.add('shadow-sm');
    } else {
      header.classList.remove('shadow-sm');
    }

    lastScroll = currentScroll;
  });
</script>
